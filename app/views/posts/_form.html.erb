<div class="well">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <h4>Update Status</h4>
      <div id="post-content" contenteditable="true" class="editable form-control input-mentionable" placeholder="What's up?"></div>
      <%= f.hidden_field :content, class: 'form-control input-mentionable', autofocus: true %>
    </div>
    <div id="img-preview" class="form-group hidden">
      <img src="" alt="Preview">
    </div>
    <div class="form-group hidden">

    <% f.fields_for :pictures, @post.pictures.build do |picture| %>
        <%= picture.file_field :picture %>
    <% end %>
    </div>
    <div class="form-group">
      <%= f.submit 'Post', class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
